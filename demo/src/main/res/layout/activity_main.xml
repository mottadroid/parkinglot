<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.door3.parkinglot.MainActivity">

    <GridView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/driver_type_selection"
        android:numColumns="2"
        >
    </GridView>

    <RadioGroup
        android:id="@+id/driver_type_selection"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_height="wrap_content"

        >

        <RadioButton
            android:id="@+id/standart_driver"
            android:text="@string/standart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
        />

        <RadioButton
            android:id="@+id/handicapped_driver"
            android:text="@string/handicapped"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />

    </RadioGroup>

</RelativeLayout>
